generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  author    String   @db.VarChar(255)
  published Boolean  @default(false)
}